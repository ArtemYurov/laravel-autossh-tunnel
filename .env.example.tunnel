# Laravel AutoSSH Tunnel Configuration

# Default tunnel connection name
TUNNEL_CONNECTION=remote_db

# Debug mode
TUNNEL_DEBUG=false

# AutoSSH
TUNNEL_AUTOSSH_ENABLED=true

# ============================================================================
# Forward Tunnel Example - Access remote database
# Type: forward (ssh -L)
# ============================================================================

# SSH Connection (how to connect to SSH server)
TUNNEL_SSH_USER=your_ssh_user
TUNNEL_SSH_HOST=your_server.com
TUNNEL_SSH_PORT=22
TUNNEL_SSH_KEY=/path/to/ssh/key

# Remote Target (what to forward on SSH server)
TUNNEL_REMOTE_HOST=localhost
TUNNEL_REMOTE_PORT=5432

# Local Bind (where to bind locally)
TUNNEL_LOCAL_PORT=15432

# SSH Options
TUNNEL_SSH_STRICT_HOST_KEY_CHECKING=false
TUNNEL_SSH_SERVER_ALIVE_INTERVAL=60
TUNNEL_SSH_SERVER_ALIVE_COUNT_MAX=3
TUNNEL_SSH_EXIT_ON_FORWARD_FAILURE=true
TUNNEL_SSH_TCP_KEEP_ALIVE=true
TUNNEL_SSH_CONNECT_TIMEOUT=10

# Database connection using tunnel
TUNNEL_DB_CONNECTION=pgsql
TUNNEL_DB_HOST=localhost
TUNNEL_DB_PORT="${TUNNEL_LOCAL_PORT}"
TUNNEL_DB_DATABASE=database_name
TUNNEL_DB_USERNAME=db_user
TUNNEL_DB_PASSWORD=db_password

# ============================================================================
# Reverse Tunnel Example - Expose local app for webhooks
# Type: reverse (ssh -R)
# ============================================================================

# SSH Connection (how to connect to SSH server)
WEBHOOK_SSH_USER=your_ssh_user
WEBHOOK_SSH_HOST=your_public_server.com
WEBHOOK_SSH_PORT=22
WEBHOOK_SSH_KEY=/path/to/ssh/key

# Remote Bind (where to bind on SSH server - localhost = local only, 0.0.0.0 = public)
WEBHOOK_REMOTE_HOST=localhost
WEBHOOK_REMOTE_PORT=8080

# Local Target (your local application)
WEBHOOK_LOCAL_PORT=8000

# SSH Options
WEBHOOK_SSH_STRICT_HOST_KEY_CHECKING=false
WEBHOOK_SSH_SERVER_ALIVE_INTERVAL=60
WEBHOOK_SSH_SERVER_ALIVE_COUNT_MAX=3
WEBHOOK_SSH_EXIT_ON_FORWARD_FAILURE=true
WEBHOOK_SSH_TCP_KEEP_ALIVE=true
WEBHOOK_SSH_CONNECT_TIMEOUT=10
